{
  "extends": "airbnb",
  "rules": {
    "global-require": 0,
    "globals": { "fetch": false },
    "max-len": [1, 120, 2, {"ignoreComments": true}],
    "indent": ["error", 4],
    "react/jsx-indent": ["error", 4],
    "react/destructuring-assignment": ["enabled", "never"],
    "react/jsx-indent-props": ["error", 4],
    "react/jsx-closing-bracket-location": [1, { "selfClosing": "after-props" }],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/no-typos": 0,
    "skipBlankLines": true,
    "no-console": "off",
    "no-param-reassign": ["error", { "props": false }],
    "react/prefer-stateless-function": ["disabled", { "ignorePureComponents": "ignorePureComponents" }],
    "react/forbid-prop-types": ["disabled", { "forbid": ["string"], "checkContextTypes": "boolean", "checkChildContextTypes": "boolean" }]
  },
  "parser": "babel-eslint"
}